<actio.actio.functions.TileView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:padding="5dp" >
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    	<!--android:background="@drawable/reverse_borderless_button" />-->
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/tile_border" />
    
    <ImageView 
        android:layout_alignParentBottom="true"
        android:id="@+id/image"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_margin="3dp"
        android:layout_height="65dp"/>

    <RelativeLayout 
        android:id="@+id/image_panel"
        android:background="#44000000"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="3dp" />
    
    <TextView 
        android:id="@+id/title"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:fontFamily="sans-serif-light"
        android:textSize="25sp"
        android:textColor="#ffffff"
        android:padding="10dp"/>
    
</actio.actio.functions.TileView>